{
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "semi": false,
  "htmlWhitespaceSensitivity": "ignore",
  "arrowParens": "always",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ["**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "importOrder": [
    "^@angular(.*)$",
    "^rxjs(.*)$",
    "^[@?a-z]",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "classProperties", "decorators-legacy"],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
